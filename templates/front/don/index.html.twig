{% extends 'baseFront.html.twig' %}

{% block hero_section %}
     <section id="hero" class="hero">
         <div class="container position-relative">
             <div class="row gy-5" data-aos="fade-in">
                 <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center text-center text-lg-start">
                     <h2>Bienvenue a  <span>EcoCycla</span></h2>
                     <h3> espace don </h3>

                 </div>
                 <div class="col-lg-6 order-1 order-lg-2">
                     <img src="assets1/img/ecotrans.png" class="img-fluid" alt="" data-aos="zoom-out" data-aos-delay="100">
                 </div>
             </div>
         </div>



         </div>
     </section>

 {% endblock %}

{% block content %}
    <h1>Liste des dons</h1>
    <table class="table table-striped">
        <thead>
        <tr>
            <th>#</th>
            <th>Description</th>
            <th>Catégorie</th>
            <th>Poids</th>
            <th>Date</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for don in dons %}
            <tr>
                <td>{{ don.id }}</td>
                <td>{{ don.descriptionD }}</td>
                <td>{{ don.idCategorie.nom }}</td>
                <td>{{ don.poids }} kg</td>
                <td>{{ don.date|date('d/m/Y') }}</td>
                <td>
                    <a href="{{ path('don_edit', { id: don.id }) }}" class="btn btn-sm btn-primary">Modifier</a>
                    <form action="{{ path('don_delete', { id: don.id }) }}" method="post" style="display: inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce don ?')">
                        <button type="submit" class="btn btn-sm btn-danger">Supprimer</button>
                    </form>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="6">Aucun don trouvé.</td></tr>
        {% endfor %}
        </tbody>
    </table>
    <a href="{{ path('don_new') }}" class="btn btn-primary">Ajouter un don</a>
{% endblock %}
