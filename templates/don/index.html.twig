{% extends 'baseFront.html.twig' %}

{% block title %}Don index{% endblock %}

{% block body %}
    {% block hero_section %}
        <section id="hero" class="hero">
            <div class="container position-relative">
                <div class="row gy-5" data-aos="fade-in">
                    <div class="col-lg-6 order-2 order-lg-1 d-flex flex-column justify-content-center text-center text-lg-start">
                        <h2>List de  <span>Don</span></h2>


                    </div>
                    <div class="col-lg-6 order-1 order-lg-2">
                        <img src="assets1/img/ecotrans.png" class="img-fluid" alt="" data-aos="zoom-out" data-aos-delay="100">
                    </div>
                </div>
            </div>



            </div>
        </section>

    {% endblock %}
<section id="about" class="about">
    <div class="container" data-aos="fade-up">
        <div class="row gy-4">

            <a href="{{ path('app_don_new') }}" class="btn btn-primary">Ajouter un don</a>

    <table class="table">
        <thead>
            <tr>
              {#  <th>Id</th>#}
                <th>Poids</th>
                <th>Description</th>
                <th>Etat</th>
                <th>Categorie</th>
                <th>Date</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for don in dons %}
            <tr>
              {#  <td>{{ don.id }}</td>#}
                <td>{{ don.poids }}</td>
                <td>{{ don.descriptionD }}</td>
                <td>{{ don.etat }}</td>
                <td>{{ don.idCategorie.nom }}</td>
                <td>{{ don.date ? don.date|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('app_don_show', {'id': don.id}) }}" class="btn btn-sm btn-info">Voir</a>
                    <a href="{{ path('app_don_edit', {'id': don.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                    {% if User.roles == 3 %}  <a href="{{ path('app_collecte_new', {'id': don.id}) }}" class="btn btn-sm btn-warning">Selectionne</a> {% endif %}

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


           </div>
    </div></section>
{% endblock %}
